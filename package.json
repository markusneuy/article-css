{
    "name": "article-css",
    "version": "0.1.0",
    "author": "Markus Neuy <info@maqune.de> (https://github.com/markusneuy/)",
    "license": "MIT",
    "description": "A simple styling for articles.",
    "main": "dist/index.js",
    "module": "src/index.js",
    "scripts": {
        "build": "cross-env NODE_ENV=production postcss src/index.css -d dist",
        "watch": "postcss src/index.css -d dist -w ",
        "lint": "stylelint src/*.css",
        "serve": "live-server",
        "commit": "git-cz",
        "release": "standard-version"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/markusneuy/article-css"
    },
    "bugs": "https://github.com/markusneuy/article-css/issues",
    "homepage": "https://github.com/markusneuy/article-css#readme",
    "engines": {
        "node": ">=8.0.0"
    },
    "keywords": [
        "css",
        "styles",
        "article"
    ],
    "private": true,
    "directories": {
        "styleguide": "./styleguide",
        "src": "./src",
        "dist": "./dist"
    },
    "dependencies": {},
    "devDependencies": {
        "commitizen": "^2.9.6",
        "cross-env": "^5.1.3",
        "cssnano": "^3.10.0",
        "cz-conventional-changelog": "^2.1.0",
        "live-server": "^1.2.0",
        "mdcss": "^1.5.2",
        "postcss-calc": "^6.0.1",
        "postcss-cli": "^5.0.0",
        "postcss-critical-css": "^3.0.1",
        "postcss-cssnext": "^3.1.0",
        "postcss-import": "^11.1.0",
        "postcss-reporter": "^5.0.0",
        "postcss-url": "^7.3.1",
        "postcss-wcag-contrast": "^2.0.0",
        "pre-commit": "^1.2.2",
        "standard-version": "^4.3.0",
        "stylelint": "^9.1.1",
        "stylelint-config-standard": "^18.2.0",
        "stylelint-order": "^0.8.1"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "pre-commit": [
        "lint"
    ]
}
